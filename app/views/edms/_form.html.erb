<%= form_for(edm,html: { html: "form-horizontal" }, remote: true) do |f| %>
  <table class="table" style="width:70%;margin:0 auto;">
    <tr>
      <td><b>Name</b></td>
      <td> <%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><b>Subject</b></td>
      <td><%= f.text_field :subject %></td>
    </tr>
    <tr>
      <td><b>From</b></td>
      <td><%= f.text_field :from %></td>
    </tr>
    <tr>
      <td><b>From Email</b></td>
      <td><%= f.text_field :from_email %></td>
    </tr>
    <tr>
      <td><b>Template</b></td>
      <td><%= f.select :template_id, Segment.all.map { |d| [d.title, d.id] }, class: "chosen-select" %></td>
    </tr>
    <tr><td colspan="2"><%= f.submit t("btn.submit"), class: "btn btn-primary" %></td></tr>
  </table>
<% end %>
