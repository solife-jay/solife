<h2>Edm List
  <small><%= link_to "New", new_edm_path(), remote: true, class: "btn btn-primary" %></small>
</h2>
 
<table class="table">
  <tr>
    <th>Name</th>
    <th>Subject</th>
    <th>From</th>
    <th>Email</th>
    <th>Template</th>
    <th>Detail</th>
    <th>SendLog</th>
    <th>Edit</th>
    <th>Del</th>
  </tr>
 
<% @edms.each do |edm| %>
  <tr id="<%= dom_id edm %>">
    <td><%= edm.name %></td>
    <td><%= edm.subject %></td>
    <td><%= edm.from %></td>
    <td><%= edm.from_email %></td>
    <td><%= edm.template_id %></td>
    <td><%= link_to "show", edm, remote: true, class: "btn btn-mini btn-info" %></td>
    <td><%= link_to "log", edm_edm_logs_path(edm), remote: true, class: "btn btn-mini btn-info" %></td>
    <td><%= link_to "edit", edit_edm_path(edm), remote: true, class: "btn btn-mini btn-success" %></td>
    <td><%= link_to "del", edm, method: :delete, remote: true, data: { confirm: "Are you sure?" }, class: "btn btn-mini btn-danger" %></td>
  </tr>
<% end if @edms %>
</table>
 
<br />
 

<%= render :partial => "edms/modal" %>

