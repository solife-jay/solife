<div class="reply" id="<%= dom_id(reply) %>">
  <div class="pull-left face">
    <img src="http://1.gravatar.com/avatar/505f97bd425cda6ec5b4ce2e7b59d414?s=40&d=http%3A%2F%2F1.gravatar.com%2Favatar%2Fad516503a11cd5ca435acc9bb6523536%3Fs%3D40&r=G">       
  </div>
  <div class="infos">
    <div class="info">
      <span class="name">
        <%= reply.name %>
      </span>
      <span class="time timeago">
        <%= timeago(reply.created_at) %>
      </span>
    </div>
    <div class="body">
       <%= reply.content %>
    </div>
  </div>
</div>
