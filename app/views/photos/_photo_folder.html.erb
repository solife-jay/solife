<ul class="photo-folder-box" id="folder_<%= folder.id %>_info">
 <li class="photo-folder">
     <a style="display:block;width: 200px;height: 130px;overflow: hidden;position:relative;">
     <img class="photo-folder" src="<%= File.join("/photos",folder.folder_name,folder.photos.first.path) if folder and folder.photos.first %>" class="img-polaroid" style="margin-top: 0px; margin-left: 0px; opacity: 1;">
     </a>
 </li>
 <li>name: <%= folder.name if folder %></li>
 <li>size: <%= folder.photos.size if folder %></li>
 <% if session[:user_id] %>
  <li><%= link_to '编辑', folders_edit_path(folder.id), :class => 'btn btn-mini', :remote => true %></li>
  <li><%= link_to '删除', folders_destroy_path(folder.id), :method => :delete, :confirm => "确认删除[#{folder.name}]相册?", :class => 'btn btn-mini', :remote => true %></li>
 <% end %>
</ul>
